@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">HTML</h1>
    <a href="https://www.youtube.com/watch?v=G3e-cpL7ofc&t=106s" target="_blank">Youtube Tutorial</a>
   <p>Button Practice</p>
    <div>
   <button class="subcribe">
        Subscribe
    </button>
    <button class="join-btn">Join</button>
    <button class="tweet-btn">Tweet</button>
   </div> 
    <style>
        button.subcribe{
            background-color: rgb(255 46 46);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 4px;
            cursor:pointer;
            margin-right:4px;
            transition: opacity 0.15s;
            vertical-align:top;
        }
        
        .subcribe:hover{
            opacity: 0.8; 
        }
        .subcribe:active{
            opacity: 0.4;
        }
        
        .join-btn{
          background-color: white;
          color: rgb(45 131 255);
          font-weight: bold;
          border-color: rgb(45 131 255);
          border-radius:4px;
          border-width:0.5px;
          border:solid;
          cursor:pointer;
          padding: 2px 8px;
          margin-right:4px;
          vertical-align: top;
          transition: background-color 0.15s, color 0.15s;
        }
        .join-btn:hover{
          background-color: rgb(45 131 255);
          border-color: rgb(45 131 255);
          color:white; 
        }
        .join-btn:active{
            opacity:0.4;
        }

        .tweet-btn{
            background-color: rgb(45 131 255);
            color: white;
            border:none;
            border-radius: 25px;
            padding:4px;
            cursor:pointer;
            font-weight:bold;
            padding-left:8px;
            padding-right:8px;
            font-size:15px;
           transition: box-shadow 0.15s;
            vertical-align: top;
        }   
        .tweet-btn:hover{
          box-shadow: 5px 5px 10px rgba(45, 131, 255, 0.5);
        }


    </style>
</div>
<div>
    <p>Pagination</p>
    <button class="back-btn">
        Back
    </button>
    <a class="page-num">1</a>
    <a class="page-num">2</a>
    <a class="page-num">3</a>
    <button class="next-btn">
        Next
    </button>
    <style>
        .back-btn{

        }
    </style>
</div>